# CampusKarma Local Development Environment
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/campuskarma
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=campuskarma-local-dev-secret-2024
JWT_EXPIRES_IN=7d
MAGIC_LINK_EXPIRES_IN=10m
BCRYPT_ROUNDS=10

# Email Service (Development - Console logging)
EMAIL_SERVICE=console
EMAIL_USER=dev@campuskarma.local
EMAIL_PASS=development
EMAIL_FROM=CampusKarma Dev <dev@campuskarma.local>

# Razorpay Payment Gateway (Test Mode)
RAZORPAY_KEY_ID=rzp_test_sample_key
RAZORPAY_KEY_SECRET=sample_secret
RAZORPAY_WEBHOOK_SECRET=webhook_secret

# Cloudinary (Development)
CLOUDINARY_CLOUD_NAME=campuskarma-dev
CLOUDINARY_API_KEY=dev_key
CLOUDINARY_API_SECRET=dev_secret

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Trust & Security
KARMA_INITIAL_SCORE=50
KARMA_MAX_SCORE=100
SKILL_QUIZ_ATTEMPTS=3
TASK_ESCROW_HOLD_HOURS=1

# Anti-Fraud Settings (Relaxed for development)
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_TIME_HOURS=0.1
SUSPICIOUS_ACTIVITY_THRESHOLD=50
