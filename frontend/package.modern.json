{
  "name": "skilllance-frontend-modern",
  "private": true,
  "version": "1.0.2.0",
  "type": "module",
  "description": "SkillLance Frontend - Modern React Architecture",
  "scripts": {
    "dev": "vite --config vite.config.modern.js",
    "build": "vite build --config vite.config.modern.js",
    "preview": "vite preview --config vite.config.modern.js",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "rm -rf dist node_modules/.vite",
    "analyze": "npx vite-bundle-analyzer dist/stats.html"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "firebase": "^10.14.1",
    "framer-motion": "^11.11.7",
    "lucide-react": "^0.451.0",
    "zustand": "^4.5.5",
    "@tanstack/react-query": "^5.59.16",
    "react-hook-form": "^7.53.0",
    "zod": "^3.23.8",
    "@hookform/resolvers": "^3.9.0",
    "axios": "^1.7.7",
    "socket.io-client": "^4.8.0",
    "react-hot-toast": "^2.4.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "date-fns": "^4.1.0",
    "use-debounce": "^10.0.3",
    "react-intersection-observer": "^9.13.1",
    "react-helmet-async": "^2.0.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "vite": "^5.4.8",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "@eslint/js": "^9.13.0",
    "globals": "^15.11.0",
    "tailwindcss": "^3.4.13",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "vitest": "^2.1.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "typescript": "^5.6.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "skilllance",
    "react",
    "vite",
    "tailwindcss",
    "firebase",
    "student-platform",
    "help-requests",
    "anonymous-chat"
  ],
  "author": "SkillLance Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/skilllance.git",
    "directory": "frontend"
  },
  "bugs": {
    "url": "https://github.com/yourusername/skilllance/issues"
  },
  "homepage": "https://skilllance.burakamal.site"
}
