# Environment Variables Configuration for SkillLance Frontend

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=skilllance-app.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=skilllance-app
VITE_FIREBASE_STORAGE_BUCKET=skilllance-app.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Backend API Configuration
VITE_API_URL=http://localhost:5000/api/v1
VITE_SOCKET_URL=http://localhost:5000

# App Configuration
VITE_APP_NAME=SkillLance
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Features Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# External Services (Optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Development Configuration
VITE_DEBUG_MODE=true
VITE_MOCK_API=false

# Security
VITE_ALLOWED_ORIGINS=http://localhost:3000,https://skilllance.vercel.app

# Image & Media
VITE_CLOUDINARY_CLOUD_NAME=skilllance
VITE_MAX_FILE_SIZE=5242880

# Social Login Providers (if different from Firebase config)
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_GITHUB_CLIENT_ID=your_github_client_id

# Rate Limiting (frontend side)
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=900000

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Localization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_TIMEOUT=300000
